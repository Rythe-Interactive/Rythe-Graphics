#version 450

generate(vertex, fragment)

#include <stdio.shinc>
#include <lighting_input.shinc>

shader(vertex)
{
    void main(void)
    {
        gl_Position = ModelToScreenSpacePosition(position);
        PropagateStdIO();
    }
}

shader(fragment)
{
    void main(void)
    {
        vec3 normal = NormalMap(material_input.normalHeight, stdio(uv), GetTBNMatrix());

        SubmitOutput(vec4((abs(normal) + clamp(normal, 0.0, 1.0) * 2) / 3, 1), normal, GetWorldPosition());
    }
}
